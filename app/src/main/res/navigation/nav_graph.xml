<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/collection_dest">

    <!-- Collection screen -->
    <fragment
        android:id="@+id/collection_dest"
        android:name="com.anishuu.ui.collection.CollectionFragment"
        android:label="fragment_collection"
        tools:layout="@layout/collection_fragment">
        <action
            android:id="@+id/next_action"
            app:destination="@id/update_collection_dest" />

        <action
            android:id="@+id/view_series"
            app:destination="@id/view_series_details_dest" />
    </fragment>

    <!-- Update collection screen -->
    <fragment
        android:id="@+id/update_collection_dest"
        android:name="com.anishuu.ui.collection.UpdateCollectionFragment"
        android:label="fragment_update_collection"
        tools:layout="@layout/update_collection_fragment">

        <action
            android:id="@+id/next_action"
            app:popUpTo="@id/collection_dest" />
    </fragment>

    <!-- View Series Details screen -->
    <fragment
        android:id="@+id/view_series_details_dest"
        android:name="com.anishuu.ui.collection.ViewSeriesDetailsFragment"
        android:label="fragment_view_series_details"
        tools:layout="@layout/view_series_details_fragment">
        <argument
            android:name="numVolumes"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="language"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="author"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="publisher"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="notes"
            app:argType="string"
            android:defaultValue="" />
    </fragment>
</navigation>